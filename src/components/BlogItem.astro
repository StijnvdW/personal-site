---
import type { BlogItemProps } from '../models/BlogItemProps';
import { Image } from 'astro:assets';
import myImage from '../images/Astro_Blog.jpg';

interface Props extends BlogItemProps {}

const { title , date, summary, url} = Astro.props;
---
<div class="flex flex-col">
    <h2>{title}</h2>
    <p class="blog-date">{date}</p>
    <Image class="rounded-xl max-h-52 object-center object-cover" src={myImage} alt={title} />
    <div class="mt-8">
        <p class="mb-2">
            {summary}
        </p>
        <a href={url} class="read-more">Read more...</a>
    </div>
</div>
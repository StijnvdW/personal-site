---
import type { BlogItemProps } from '../models/BlogItemProps';

interface Props extends BlogItemProps {}

const { title , date, summary, url} = Astro.props;
---
<div class="flex gap-10">
    <!--
    <Image class="rounded-full max-h-full m-auto size-40" src={localImage} alt="Cartoon face of Stijn." />
     -->
    <div>
        <h2>{title}</h2>
        <p class="blog-date">{date}</p>
        <p class="mb-2">
            {summary}
        </p>
        <a href={url} class="read-more">Read more...</a>
    </div>
</div>